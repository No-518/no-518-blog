---
import { site, siteCredits, socialLinks } from '../config/site';
const base = import.meta.env.BASE_URL;
---

<footer class="mt-16 border-t border-border py-8 text-sm text-slate-600 dark:text-slate-300">
  <div class="container flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <div>Â© {new Date().getFullYear()} {site.author}</div>
      <div class="mt-1 text-xs text-slate-500">{siteCredits}</div>
    </div>
    <div class="flex items-center gap-4">
      {socialLinks.map((link) => (
        <a href={link.href.startsWith('/') ? `${base}${link.href.slice(1)}` : link.href}>
          {link.label}
        </a>
      ))}
    </div>
  </div>
</footer>
