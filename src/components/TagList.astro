---
const { tags, baseUrl } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {tags.map((tag) => (
    <a
      class="rounded-full border border-border px-3 py-1 text-xs text-slate-600 hover:border-primary dark:text-slate-300"
      href={`${baseUrl}tags/${tag.slug}`}
    >
      {tag.label} ({tag.count})
    </a>
  ))}
</div>
