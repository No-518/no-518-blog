---
import { navigation, site } from '../config/site';
import ThemeToggle from './ThemeToggle.astro';
const base = import.meta.env.BASE_URL;
---

<header class="sticky top-4 z-30">
  <div class="container">
    <div class="card flex items-center justify-between px-4 py-3">
      <a class="text-lg font-semibold text-foreground" href={`${base}`}>
        {site.name}
      </a>
      <nav class="hidden items-center gap-4 text-sm text-slate-600 dark:text-slate-300 md:flex">
        {navigation.map((item) => (
          <a href={`${base}${item.href.replace('/', '')}`}>{item.label}</a>
        ))}
      </nav>
      <div class="flex items-center gap-2">
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>
