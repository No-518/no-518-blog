---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getAllCategories, getPublishedPosts } from '../../utils/content';

export async function getStaticPaths() {
  const categories = await getAllCategories();
  return categories.map((category) => ({
    params: { category: category.slug },
    props: { category },
  }));
}

const { category } = Astro.props;
const posts = (await getPublishedPosts()).filter(
  (post) => post.data.categorySlug === category.slug,
);
---

<BaseLayout title={`分类 · ${category.label}`}>
  <section class="space-y-4">
    <h1 class="text-2xl font-semibold">分类：{category.label}</h1>
    <div class="space-y-4">
      {posts.map((post) => (
        <PostCard post={post} />
      ))}
    </div>
  </section>
</BaseLayout>
